{
  "name": "skip-widget",
  "version": "0.0.0",
  "description": "Skip Widget",
  "main": "packages/widget/src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev:widget": "yarn workspace widget run dev",
    "dev:nextjs": "yarn workspace nextjs run dev",
    "dev:nextjs-app": "yarn workspace nextjs-app run dev",
    "build": "yarn workspace widget run build",
    "build:nextjs": "yarn build && yarn workspace nextjs build",
    "build:nextjs-app": "yarn build && yarn workspace nextjs-app build",
    "chains:update": "git submodule init && git submodule update --remote",
    "chains:generate": "yarn workspace widget run chains:generate",
    "chains": "yarn run chains:update && yarn run chains:generate"
  },
  "devDependencies": {
    "@cosmos-kit/cosmostation-extension": "^2.7.10",
    "@cosmos-kit/keplr-extension": "^2.7.9",
    "@cosmos-kit/leap-extension": "^2.7.10",
    "@cosmos-kit/okxwallet": "2.4.x",
    "@cosmos-kit/react": "2.10.x",
    "@cosmos-kit/station": "2.5.x",
    "@cosmos-kit/vectis": "2.6.x",
    "@graz-sh/types": "^0.0.14",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "globby": "^14.0.1",
    "p-map": "^7.0.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^2.67.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.0",
    "rollup-plugin-visualizer": "^5.5.4",
    "tslib": "^1.9.3",
    "tsx": "^4.12.0",
    "typescript-plugin-styled-components": "^2.0.0",
    "viem": "^2.7.16",
    "wagmi": "^2.5.7"
  },
  "packageManager": "yarn@3.2.0",
  "dependencies": {
    "@changesets/cli": "^2.24.4"
  }
}
